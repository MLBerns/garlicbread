<% include _html_header.ejs %>
<link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
<script src="/scripts/jquery-ui-1.10.4.min.js"></script>
<script src="scripts/profile.js"></script>
<% include _nav.ejs %>
 <!--  The code below the creates html form when you -->
  <div id="wrapper">
    <div id="content">
    <!-- Begin Guido Experiment -->
      <div id="dialog" title="Pet Information">

        <form action="/create/<%= profile._id %>"  method="post">

        <form id="pet_submission">

          <fieldset class="ui-helper-reset">
            <label for="tab_title">Name</label>
            <input type="text" name="name" id="tab_title" class="ui-widget-content ui-corner-all"><br>
            <label for="tab_content">Age&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <label for="tab_content">Approx. Weight</label><br>
            <input type="text" name="age" id="tab_title" class="ui-widget-content ui-corner-all" size="4">
            <input type="text" name="weight" id="tab_title" class="ui-widget-content ui-corner-all" size="4"><br><br>
            <label for="tab_title">License Number</label>
            <input type="text" name="licensenumber" id="tab_title" class="ui-widget-content ui-corner-all"><br>

            <label for="tab_title">Breed</label><br>
            <input type="text" name="type" id="tab_title" class="ui-widget-content ui-corner-all">

            <label for="tab_title">Color/Markings</label><br>
            <input type="text" name="markings" id="tab_title" class="ui-widget-content ui-corner-all">

            <p>Immunizations:</p>

            <input type="text" name="shotName" id="tab_title" value="" class="ui-widget-content ui-corner-all">
            <label for="tab_title">&nbsp;&nbsp;&nbsp; Date Administered:</label><br>
            <input type="text" name="date" id="tab_title" value="" class="ui-widget-content ui-corner-all">
          </fieldset>
        </form>
      </div>
        <h1> Hey <%= profile.userName %> Welcome to your pets profile</h1>
        <% if (profile.pets) { %>
        <% if(profile.pets[0]) { %>
        <h1> Pet: <%= profile.pets[0].name%><h1>
          <% } %>
        <div id="tabs">
          <ul>
            <% for (var i = 0; i < pets.length; i++ ) { %>
              <li><a href="#tabs-<%= i+2 %>"><%= pets[i].name %></a></li>
            <% } %>
            <li><a href="#tabs-1">Add New Pet</a></li>
          </ul>
        <% for (var i = 0; i < pets.length; i++ ) { %>
          <div id="tabs-<%= (i+2) %>">
            <p>Name: <%= pets[i].name %></p>
            <p>Age: <%= pets[i].age %></p>
            <p>Weight: <%= pets[i].weight %></p>
            <p>License Number: <%= pets[i].licensenumber %></p>
            <p>Breed: <%= pets[i].breed %></p>
            <p>Markings: <%= pets[i].markings %></p>
          </div>
        <% } %>
      <% } %>
          <div id="tabs-1">
          <button id="add_tab">Add Pet</button>
        </div>
      </div>
    </div>
  </div>
<% include _html_footer.ejs %>


